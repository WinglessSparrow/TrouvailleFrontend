@page "/register"

<div class="page">
    <div class="main-container-style register">
        <EditForm Model=@_registerData>
            <DataAnnotationsValidator />
            <div class="input-group">
                <h4>Personal Data</h4>
                <InputText id="first-name" @bind-Value=_registerData.FirstName
                    @bind-Value-oninput=_registerData.FirstName placeholder="First Name" />
                <InputText id="last-name" @bind-Value=_registerData.LastName @bind-Value-oninput=_registerData.LastName
                    placeholder="Surname" />
                <InputText type="phone" id="phone-number" @bind-Value=_registerData.PhoneNumber class="not-required"
                    @bind-Value-oninput=_registerData.PhoneNumber placeholder="Phonenumber" />
                <div>
                    <ValidationMessage For="@(() => _registerData.FirstName)" />
                    <ValidationMessage For="@(() => _registerData.LastName)" />
                    <ValidationMessage For="@(() => _registerData.PhoneNumber)" />
                </div>
            </div>

            <div class="input-group">
                <h4>Login Data</h4>
                <InputText type="email" @bind-Value=_registerData.Email @bind-Value-oninput=_registerData.Email
                    placeholder="Email" />
                <InputText type="password" @bind-Value=_registerData.Password @bind-Value-oninput=_registerData.Password
                    placeholder="Password" />
                <InputText type="password" @bind-Value=_registerData.ConfirmPassword
                    @bind-Value-oninput=_registerData.ConfirmPassword placeholder="Confirm Password" />
                <div>
                    <ValidationMessage For="@(() => _registerData.ConfirmPassword)" />
                    <ValidationMessage For="@(() => _registerData.Password)" />
                    <ValidationMessage For="@(() => _registerData.Email)" />
                </div>
            </div>

            <div class="input-group">
                <Address AddressFor="Address" @bind-AddressM=_addressData />
                <div>
                    <ValidationMessage For="@(() => _addressData.CityName)" />
                    <ValidationMessage For="@(() => _addressData.State)" />
                    <ValidationMessage For="@(() => _addressData.PostalCode)" />
                    <ValidationMessage For="@(() => _addressData.Street)" />
                    <ValidationMessage For="@(() => _addressData.StreetNumber)" />
                    <ValidationMessage For="@(() => _addressData.Country)" />
                </div>
            </div>
        </EditForm>
    </div>

</div>

@code{
    private RegisterModel _registerData = new();
    private AddressModel _addressData = new();

}